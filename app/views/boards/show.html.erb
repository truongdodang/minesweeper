<div class="w-full flex flex-col">
  <div>
    <%= link_to '< Back to home', home_path, class: "rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    <%= link_to 'Destroy this board', board_path(@board), data: {turbo_method: :delete}, class: "rounded-lg py-3 px-5 bg-red-100 text-red-500 inline-block font-medium" %>
  </div>

  <div class="my-5">
    <h1 class="font-bold text-4xl">Details</h1>
  </div>

  <div>
    <div class="text-blue-500 text-xl">
      <%= @board.name %>
    </div>
    <div>
      <%= @board.creator_email %>
    </div>
    <div>
      Size: <%= @board.width %> x <%= @board.height %> (with <%= @board.mines_num%> mines)
    </div>
    <br/>
  </div>

  <div class="w-full h-full overflow-hidden">
      <div class="w-full h-full overflow-auto">
        <table class="border-collapse">
          <% @board.height.times.each do |y| %>
            <tr>
              <% @board.width.times.each do |x| %>
                <% if @all_cells[[x, y]] %>
                  <td class="w-8 min-w-8 h-8 min-h-8 border-solid bg-red-600 border-4 text-center">
                    <i class="fa fa-bomb"></i>
                  </td>
                <% else %>
                  <td class="w-8 min-w-8 h-8 min-h-8 border-solid border-4 text-center"></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </table>
      </div>
  </div>
  
</div>


